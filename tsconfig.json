{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "types": ["node", "jest"],
    "baseUrl": "./lib",
    "outDir": "./dist",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false
  }
}
